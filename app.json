{
  "expo": {
    "name": "피트니스 앱",
    "slug": "workout-meal-plan-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "scheme": "dailyboost",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.workoutmealplan.app"
    },
    "android": {
      "package": "com.workoutmealplan.app",
      "permissions": [
        "ACTIVITY_RECOGNITION",
        "android.permission.DETECT_SCREEN_CAPTURE",
        "INTERNET"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "navigationBar": {
        "backgroundColor": "#ffffff",
        "barStyle": "dark-content"
      },
      "softwareKeyboardLayoutMode": "pan",
      "usesCleartextTraffic": true,
      "networkSecurityConfig": {
        "cleartextTrafficPermitted": true
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [
            {
              "scheme": "dailyboost"
            }
          ]
        }
      ]
    },
    "plugins": [
      "expo-font",
      "expo-web-browser"
    ]
  }
}
